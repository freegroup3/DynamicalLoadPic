<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   minWidth="955" minHeight="600"
			   applicationComplete="init()">	
	<fx:Script>
		<![CDATA[
			import mx.core.UIComponent;
			
			private var mLoader:Loader;
			private var ui:UIComponent  = new UIComponent();
			
			private function init():void
			{
				mLoader = new Loader();
				mLoader.contentLoaderInfo.addEventListener(Event.COMPLETE, completeHandler);
				addElement( ui );
			}
			private function LoadSwf():void
			{
				mLoader.load(new URLRequest("assets/EmbedMe.swf"));
			}
			private function completeHandler(event:Event):void
			{
				var displayA:DisplayObject = mLoader.content as DisplayObject;
				displayA.x = -50;
				displayA.y = -100;
				
				ui.addChild(displayA);
			}
			private function duplicateSWFHandler(event:MouseEvent):void
			{
				trace("duplicate success");
			}
		]]>
	</fx:Script>
	<s:Button id="duplicateSWF" label="往下複製SWF檔" 
			  click="duplicateSWFHandler(event)" 
			  x="300" y="10"/>
</s:Application>



















